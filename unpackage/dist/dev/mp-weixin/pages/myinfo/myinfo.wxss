page {
  background-color: #ffffff;
}
.bgs {
  position: fixed;
  width: 100%;
  height: 500rpx;
  top: 0;
  left: 0;
}
.infos {
  position: fixed;
  left: 0;
  top: 220rpx;
  width: 100%;
  z-index: 100;
}
.myinfo {
  position: relative;
  width: 100%;
  box-sizing: border-box;
}
.userinfo {
  width: 100%;
  padding: 20px 20px 10px 20px;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 15px;
  color: #ffffff;
  box-sizing: border-box;
}
.username {
  flex: 1;
  display: flex;
  align-items: center;
}
.uselog {
  padding: 0 20px;
}
.uselog > image {
  width: 100%;
}
.quickuse {
  width: 100%;
  box-sizing: border-box;
  padding: 10px 20px 20px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.quickuse .left {
  margin-right: 10px;
  flex: 1;
}
.quickuse .left > view:nth-child(1) {
  font-size: 16px;
  color: #333333;
}
.quickuse .left > view:nth-child(2) {
  font-size: 13px;
  margin-top: 10px;
  color: #999;
}
.center {
  width: 50px;
  margin-right: 10px;
}
.right {
  width: 100px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #2C8DFE;
  color: #ffffff;
  font-size: 12px;
}
.right > image {
  width: 12px;
  margin-right: 3px;
}

