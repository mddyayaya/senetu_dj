.formData {
  width: 100%;
  background-color: #ffffff;
  box-shadow: 0px 2px 8px 0px rgba(0, 0, 0, 0.08);
  border-radius: 4px;
  padding: 0 10px;
  box-sizing: border-box;
}
.form_item {
  width: 100%;
  line-height: 50px;
  border-bottom: 1px solid #DEDEDE;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 13px;
  color: #333333;
}
.form_item > view:nth-child(1) {
  color: #666666;
}
.form_item:last-child {
  border: none;
}
.days_list {
  display: flex;
  align-items: center;
}
.btn {
  width: 100%;
  height: 50px;
  text-align: center;
  font-size: 14px;
  color: #fff;
  line-height: 50px;
  background-color: #38A0FE;
  border-radius: 4px;
  margin-top: 10px;
}
.days_list {
  display: flex;
  align-items: center;
}
.days_list view {
  border: 1px solid #DEDEDE;
  background: #F8F8F8;
  color: #666666;
  font-size: 14px;
  margin-left: 10px;
  padding: 0 15px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  border-radius: 4px;
}
.days_list .selectDay {
  border: 1px solid #45C08C;
  color: #45C08C;
  background-color: #E6FDF6;
}
.needCenter {
  display: flex;
  align-items: center;
}
.needCenter input {
  border: none;
  width: auto;
  text-align: right;
  color: inherit;
  font-size: 14px;
  background: none;
  border: none;
}

