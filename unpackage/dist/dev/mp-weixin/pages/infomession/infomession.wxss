.userwrap{
  width: 100%;
  background-color: #ffffff;
  margin-top: 15px;
  padding: 20px 20px 0 20px;
  box-sizing: border-box;
}
.userpic{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: auto;
  margin-bottom: 20px;
}
.userpic>image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.formItem{
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 50px;
  font-size: 14px;
  border-bottom:1px solid #ededed;
}
.formItem>input{
  flex: 1;
  margin-left: 10px;
  text-align: right;
}
.formItem>text:nth-child(1){
  color: #666666;
}
.otherinfo{
  border-top: 1px solid #ededed;
}
.formItem:last-child{
  border: none;
}
.username{
	display: flex;
	align-items: center;
}
.sure{
	  height: 40px;
	  line-height: 40px;
	  margin:20px auto;
	  width: 200px;
	  background: #38A0FE;
	  border-radius: 4px;
	  text-align: center;
	  color: #fff;
	  font-size: 14px;
}

